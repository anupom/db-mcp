# Cube API Configuration
CUBE_API_URL=http://localhost:4000/cubejs-api/v1
CUBE_JWT_SECRET=this-is-a-very-long-secret-for-development-only-32-chars
CUBE_JWT_EXPIRES_IN=1h

# Query Limits
MAX_LIMIT=1000

# Logging
LOG_LEVEL=info
RETURN_SQL=false

# MCP Transport
MCP_HTTP_ENABLED=true
MCP_HTTP_PORT=3000
MCP_STDIO_ENABLED=false

# PostgreSQL (port 5434 = Docker-mapped port for local dev)
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_DB=ecom
POSTGRES_USER=cube
POSTGRES_PASSWORD=cube

# Data directory
DATA_DIR=./data

# Admin secret for encrypting stored credentials (min 32 characters, optional)
# ADMIN_SECRET=your-admin-secret-key-here-at-least-32-chars

# Anthropic API key (required for chat and LLM features)
# ANTHROPIC_API_KEY=sk-ant-...
